<Window x:Class="TTSOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        Title="TTS Overlay" Height="600" Width="556"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" >
    <!--MouseDown="Window_MouseDown"> (hopefully we don't need this again
    )-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>
        <!-- Character Image -->
        <Image x:Name="CharacterImage"
            Width="200" Height="200"
            RenderOptions.BitmapScalingMode="NearestNeighbor" Margin="2,50,298,50" Grid.RowSpan="2" />


        <!-- Use a StackPanel so TextBlock can size naturally -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="200,220,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock x:Name="SpeechText"
                   Background="#E8DCD3"
                   Foreground="#211433"
                   FontFamily="pack://application:,,,/Fonts/#Munro Small"
                   FontSize="40"
                   Padding="10,0,10,3"
                   UseLayoutRounding="True"
                   SnapsToDevicePixels="True"
                   TextOptions.TextFormattingMode="Display"
                   TextOptions.TextRenderingMode="Aliased"
                   LineHeight="30"
                   LineStackingStrategy="BlockLineHeight"
                   Visibility="Collapsed"
                   TextWrapping="Wrap"
                   TextAlignment="Left"
                   MaxWidth="320" >
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black"
                          Direction="315"
                          ShadowDepth="5"
                          BlurRadius="0"
                          RenderingBias="Performance"
                          Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel> 



        <!--Visibility is normally collapsed-->

        <!-- Invisible Input Box (You need to figure out a way to get rid of this without breaking it)
        <TextBox x:Name="HiddenInput"
             Opacity="0"
             Width="1"
             Height="1"
             BorderThickness="0"
             Background="Transparent"
             Focusable="True"
             KeyDown="HiddenInput_KeyDown" Margin="150,86,150,150" Grid.Row="1"
        -->
         

    </Grid>
</Window>
